{% extends 'base.html.twig' %}

{% block title %}
    Results
{% endblock %}

{% block body %}
    <div class = "container">
        <table id="tableResults" class="table table-striped table-bordered" style="width:100%">
            <thead>
            <tr>
                <th>Url</th>
                <th>Percents</th>
                <th>NumberOfCopiedWords</th>
                <th>Title</th>
                <th>Introduction</th>
            </tr>
            </thead>
            <tbody>
            {% for result in results %}
                <tr>
                    <td>{{ result.URL | default('N/A')}}></td>
                    <td>{{ result.Percents | default('N/A')}}</td>
                    <td>{{ result.NumberOfCopiedWords | default('N/A')}}</td>
                    <td>{{ result.Title | default('N/A')}}</td>
                    <td>{{ result.Introduction | default('N/A')}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>
    <script type="text/javascript" src="/js/table.js"></script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap.min.css">
{% endblock %}